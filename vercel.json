{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": [
        "index.html",
        "products.html",
        "css/**",
        "js/**",
        "admin/**",
        "uploads/**"
      ]
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/:path*", "destination": "/api/index.js" }
  ],
  "redirects": [
    { "source": "/products", "destination": "/products.html" },
    { "source": "/admin/login", "destination": "/admin/login.html" },
    { "source": "/admin/dashboard", "destination": "/admin/dashboard.html" }
  ]
}
